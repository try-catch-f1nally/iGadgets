                    </div>
                </div>
                <div class="accordion-item bg-dark mb-2 mb-lg-3 bg-dark">
                    <h2 class="accordion-header">
                        <button type="button" data-bs-toggle="collapse" data-bs-target="#color-panel"
                                class="accordion-button collapsed text-light fw-bold"> Color
                        </button>
                    </h2>
                    <div id="color-panel" class="accordion-collapse collapse <%= (colors.length ? "show" : "") %>">
                        <div class="accordion-body">
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="alpineGreen" id="alpineGreen"
                                       class="form-check-input rounded-1 me-3 border alpineGreen-color"
                                        <%= (filteredColors.includes("alpineGreen")) ? "" : "disabled" %>
                                        <%= (colors.includes("alpineGreen") ? "checked" : "") %>>
                                <label class="form-check-label" for="alpineGreen">Alpine Green</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="black" id="black"
                                       class="form-check-input rounded-1 me-3 border black-color"
                                        <%= (filteredColors.includes("black")) ? "" : "disabled" %>
                                        <%= (colors.includes("black") ? "checked" : "") %>>
                                <label class="form-check-label" for="black">Black</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="blue" id="blue"
                                       class="form-check-input rounded-1 me-3 border blue-color"
                                        <%= (filteredColors.includes("blue")) ? "" : "disabled" %>
                                        <%= (colors.includes("blue") ? "checked" : "") %>>
                                <label class="form-check-label" for="blue">Blue</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="gold" id="gold"
                                       class="form-check-input rounded-1 me-3 border-secondary check-invert gold-color"
                                        <%= (filteredColors.includes("gold")) ? "" : "disabled" %>
                                        <%= (colors.includes("gold") ? "checked" : "") %>>
                                <label class="form-check-label" for="gold">Gold</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="graphite" id="graphite"
                                       class="form-check-input rounded-1 me-3 border graphite-color"
                                        <%= (filteredColors.includes("graphite")) ? "" : "disabled" %>
                                        <%= (colors.includes("graphite") ? "checked" : "") %>>
                                <label class="form-check-label" for="graphite">Graphite</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="green" id="green"
                                       class="form-check-input rounded-1 me-3 border green-color"
                                        <%= (filteredColors.includes("green")) ? "" : "disabled" %>
                                        <%= (colors.includes("green") ? "checked" : "") %>>
                                <label class="form-check-label" for="green">Green</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="midnight" id="midnight"
                                       class="form-check-input rounded-1 me-3 border midnight-color"
                                        <%= (filteredColors.includes("midnight")) ? "" : "disabled" %>
                                        <%= (colors.includes("midnight") ? "checked" : "") %>>
                                <label class="form-check-label" for="midnight">Midnight</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="pacificBlue" id="pacificBlue"
                                       class="form-check-input rounded-1 me-3 border pacificBlue-color"
                                        <%= (filteredColors.includes("pacificBlue")) ? "" : "disabled" %>
                                        <%= (colors.includes("pacificBlue") ? "checked" : "") %>>
                                <label class="form-check-label" for="pacificBlue">Pacific Blue</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="pink" id="pink"
                                       class="form-check-input rounded-1 me-3 border pink-color"
                                        <%= (filteredColors.includes("pink")) ? "" : "disabled" %>
                                        <%= (colors.includes("pink") ? "checked" : "") %>>
                                <label class="form-check-label" for="pink">Pink</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="purple" id="purple"
                                       class="form-check-input rounded-1 me-3 border-secondary check-invert purple-color"
                                        <%= (filteredColors.includes("purple")) ? "" : "disabled" %>
                                        <%= (colors.includes("purple") ? "checked" : "") %>>
                                <label class="form-check-label" for="purple">Purple</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="red" id="red"
                                       class="form-check-input rounded-1 me-3 border red-color"
                                        <%= (filteredColors.includes("red")) ? "" : "disabled" %>
                                        <%= (colors.includes("red") ? "checked" : "") %>>
                                <label class="form-check-label" for="red">Red</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="sierraBlue" id="sierraBlue"
                                       class="form-check-input rounded-1 me-3 border sierraBlue-color"
                                        <%= (filteredColors.includes("sierraBlue")) ? "" : "disabled" %>
                                        <%= (colors.includes("sierraBlue") ? "checked" : "") %>>
                                <label class="form-check-label" for="sierraBlue">Sierra Blue</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="silver" id="silver"
                                       class="form-check-input rounded-1 me-3 border-secondary check-invert silver-color"
                                        <%= (filteredColors.includes("silver")) ? "" : "disabled" %>
                                        <%= (colors.includes("silver") ? "checked" : "") %>>
                                <label class="form-check-label" for="silver">Silver</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="starlight" id="starlight"
                                       class="form-check-input rounded-1 me-3 border-secondary check-invert starlight-color"
                                        <%= (filteredColors.includes("starlight")) ? "" : "disabled" %>
                                        <%= (colors.includes("starlight") ? "checked" : "") %>>
                                <label class="form-check-label" for="starlight">Starlight</label>
                            </div>
                            <div class="form-check mb-1">
                                <input type="checkbox" name="color" value="white" id="white"
                                       class="form-check-input rounded-1 me-3 border-secondary check-invert white-color"
                                        <%= (filteredColors.includes("white")) ? "" : "disabled" %>
